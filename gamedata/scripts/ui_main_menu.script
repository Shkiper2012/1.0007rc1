	if self.spawn_dlg == nil then
--  	self.spawn_dlg = ui_spawn_dialog.spawn_dialog()
		self.spawn_dlg = ui_cheat_naxac.cheat_menu()
		self.spawn_dlg.owner = self
	end
	
	self:GetHolder():start_stop_menu(self.spawn_dlg, true)
